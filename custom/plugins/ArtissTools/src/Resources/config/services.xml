<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Services -->
        <service id="ArtissTools\Service\PropertyGroupMergeService">
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="ArtissTools\Service\CustomFieldSetMergeService">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="ArtissTools\Service\PropertyCleanupService">
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="ArtissTools\Service\PropertySplitService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
        </service>

        <service id="ArtissTools\Service\PropertyTransferService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="ArtissTools\Service\PropertyOptionMergeService">
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!-- API Controllers -->
        <service id="ArtissTools\Controller\Api\PropertyMergeController" public="true">
            <argument type="service" id="ArtissTools\Service\PropertyGroupMergeService"/>
            <argument type="service" id="ArtissTools\Service\CustomFieldSetMergeService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ArtissTools\Controller\Api\PropertyCleanupController" public="true">
            <argument type="service" id="ArtissTools\Service\PropertyCleanupService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ArtissTools\Controller\Api\PropertySplitController" public="true">
            <argument type="service" id="ArtissTools\Service\PropertySplitService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ArtissTools\Controller\Api\PropertyTransferController" public="true">
            <argument type="service" id="ArtissTools\Service\PropertyTransferService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ArtissTools\Controller\Api\PropertyOptionMergeController" public="true">
            <argument type="service" id="ArtissTools\Service\PropertyOptionMergeService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="ArtissTools\Controller\Api\ProductsController" public="true">
            <argument type="service" id="product.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Property Group Commands -->
        <service id="ArtissTools\Command\PropertyGroupMergeCommand">
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="console.command"/>
        </service>

        <!-- Custom Field Commands -->
        <service id="ArtissTools\Command\CustomFieldSetMergeCommand">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="console.command"/>
        </service>

        <!-- Property Cleanup Command -->
        <service id="ArtissTools\Command\PropertyCleanupCommand">
            <argument type="service" id="ArtissTools\Service\PropertyCleanupService"/>
            <tag name="console.command"/>
        </service>

        <!-- Backup Service -->
        <service id="ArtissTools\Service\BackupService">
            <argument type="service" id="kernel"/>
            <argument>%kernel.project_dir%</argument>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- Backup Job Service -->
        <service id="ArtissTools\Service\BackupJobService">
            <argument>%kernel.project_dir%</argument>
        </service>

        <!-- Backup Controller -->
        <service id="ArtissTools\Controller\Api\BackupController" public="true">
            <argument type="service" id="ArtissTools\Service\BackupService"/>
            <argument type="service" id="ArtissTools\Service\BackupJobService"/>
            <argument>%kernel.project_dir%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Backup Commands -->
        <service id="ArtissTools\Command\BackupDbCommand">
            <argument>%kernel.project_dir%</argument>
            <argument>%env(DATABASE_URL)%</argument>
            <tag name="console.command"/>
        </service>

        <service id="ArtissTools\Command\BackupMediaCommand">
            <argument>%kernel.project_dir%</argument>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="console.command"/>
        </service>

        <!-- Restore Commands -->
        <service id="ArtissTools\Command\RestoreDbCommand">
            <argument>%kernel.project_dir%</argument>
            <argument>%env(DATABASE_URL)%</argument>
            <tag name="console.command"/>
        </service>

        <service id="ArtissTools\Command\RestoreMediaCommand">
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <!-- Subscribers -->
        <service id="ArtissTools\Subscriber\PluginLifecycleSubscriber">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>