{% block artiss_tools_products %}
<sw-page class="artiss-tools-products">
    {% block artiss_tools_products_header %}
        <template #smart-bar-header>
            <h2>{{ $tc('artissTools.products.title') }}</h2>
        </template>
    {% endblock %}

    <template #content>
        <sw-tabs 
            class="sw-tabs--small artiss-tools__tabs" 
            @new-item-active="onTabChange" 
            :default-item="activeTab"
        >
            <sw-tabs-item name="merge" :active-tab="activeTab">
                {{ $tc('artissTools.products.tabs.merge') }}
            </sw-tabs-item>
        </sw-tabs>

        <artiss-product-merge-tab
            v-if="activeTab === 'merge'"
            :httpClient="httpClient"
            :getAuthHeaders="getAuthHeaders"
        />
    </template>
</sw-page>
{% endblock %}
