<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Brands Controller -->
        <service id="ArtissStorefront\Controller\Storefront\BrandsController" public="true">
            <argument type="service" id="product_manufacturer.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

        <!-- Product Listing Subscriber - property groups filtering -->
        <service id="ArtissStorefront\Subscriber\ProductListingSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Storefront Render Subscriber - provides main category ID to Twig templates -->
        <service id="ArtissStorefront\Subscriber\StorefrontRenderSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- CMS Element Resolver: Category Grid -->
        <service id="ArtissStorefront\Cms\Element\CategoryGrid\CategoryGridCmsElementResolver">
            <argument type="service" id="category.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- CMS Element Resolver: Category Info -->
        <service id="ArtissStorefront\Cms\Element\CategoryInfo\CategoryInfoCmsElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- CMS Element Resolver: Category H1 -->
        <service id="ArtissStorefront\Cms\Element\CategoryH1\CategoryH1CmsElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- Custom Field Installer - manages category custom fields -->
        <service id="ArtissStorefront\Service\CustomFieldInstaller" public="true">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field.repository"/>
        </service>

        <!-- Product Variant Name Subscriber - auto-generates variant names -->
        <service id="ArtissStorefront\Subscriber\ProductVariantNameSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- CLI Command: Regenerate Variant Names -->
        <service id="ArtissStorefront\Command\RegenerateVariantNamesCommand">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="language.repository"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
