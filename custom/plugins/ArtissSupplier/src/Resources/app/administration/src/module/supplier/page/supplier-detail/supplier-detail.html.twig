{% block supplier_detail %}
    <sw-page class="supplier-detail">
        {% block supplier_detail_header %}
            <template #smart-bar-header>
                <h2>{{ identifier }}</h2>
            </template>
        {% endblock %}

        {% block supplier_detail_actions %}
            <template #smart-bar-actions>
                {% block supplier_detail_actions_cancel %}
                    <sw-button
                        :routerLink="{ name: 'artiss.supplier.index' }"
                        :disabled="isLoading"
                    >
                        {{ $tc('supplier.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block supplier_detail_actions_save %}
                    <sw-button-process
                        class="supplier-detail__save-action"
                        :isLoading="isLoading"
                        :processSuccess="processSuccess"
                        variant="primary"
                        @process-finish="saveFinish"
                        @click="onClickSave"
                    >
                        {{ $tc('supplier.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}
            </template>
        {% endblock %}

        {% block supplier_detail_content %}
            <template #content>
                <sw-card-view>
                    {% block supplier_detail_content_card %}
                        <sw-card
                            :title="$tc('supplier.detail.cardTitleGeneral')"
                            :isLoading="isLoading"
                        >
                            {% block supplier_detail_content_card_fields %}
                                <sw-container v-if="supplier" columns="repeat(auto-fit, minmax(250px, 1fr))" gap="0px 30px">
                                    {% block supplier_detail_content_field_name %}
                                        <sw-text-field
                                            v-model="supplier.name"
                                            :label="$tc('supplier.detail.labelName')"
                                            :placeholder="$tc('supplier.detail.placeholderName')"
                                            required
                                        >
                                        </sw-text-field>
                                    {% endblock %}

                                    {% block supplier_detail_content_field_code %}
                                        <sw-text-field
                                            v-model="supplier.code"
                                            :label="$tc('supplier.detail.labelCode')"
                                            :placeholder="$tc('supplier.detail.placeholderCode')"
                                        >
                                        </sw-text-field>
                                    {% endblock %}

                                    {% block supplier_detail_content_field_active %}
                                        <sw-switch-field
                                            v-model="supplier.active"
                                            :label="$tc('supplier.detail.labelActive')"
                                        >
                                        </sw-switch-field>
                                    {% endblock %}

                                    {% block supplier_detail_content_field_sort %}
                                        <sw-number-field
                                            v-model="supplier.sort"
                                            :label="$tc('supplier.detail.labelSort')"
                                            numberType="int"
                                        >
                                        </sw-number-field>
                                    {% endblock %}

                                    {% block supplier_detail_content_field_bitrix_id %}
                                        <sw-number-field
                                            v-model="supplier.bitrixId"
                                            :label="$tc('supplier.detail.labelBitrixId')"
                                            :disabled="true"
                                            numberType="int"
                                        >
                                        </sw-number-field>
                                    {% endblock %}
                                </sw-container>
                            {% endblock %}
                        </sw-card>
                    {% endblock %}
                </sw-card-view>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
