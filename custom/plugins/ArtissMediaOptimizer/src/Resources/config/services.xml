<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Config Service -->
        <service id="Artiss\MediaOptimizer\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- Image Format Converter -->
        <service id="Artiss\MediaOptimizer\Service\ImageFormatConverter">
            <argument type="service" id="logger"/>
        </service>

        <!-- Image Resizer -->
        <service id="Artiss\MediaOptimizer\Service\ImageResizer">
            <argument type="service" id="logger"/>
        </service>

        <!-- Original Media Archiver -->
        <service id="Artiss\MediaOptimizer\Service\OriginalMediaArchiver">
            <argument type="service" id="media.repository"/>
            <argument type="service" id="logger"/>
            <argument>%kernel.project_dir%</argument>
        </service>

        <!-- Custom Field Installer -->
        <service id="Artiss\MediaOptimizer\Service\CustomFieldInstaller">
            <argument type="service" id="custom_field_set.repository"/>
        </service>

        <!-- FileSaver Decorator -->
        <service id="Artiss\MediaOptimizer\Service\FileSaverDecorator"
                 decorates="Shopware\Core\Content\Media\File\FileSaver"
                 decoration-priority="-1000">
            <argument type="service" id="Artiss\MediaOptimizer\Service\FileSaverDecorator.inner"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ConfigService"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ImageFormatConverter"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ImageResizer"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\OriginalMediaArchiver"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Console Command -->
        <service id="Artiss\MediaOptimizer\Command\ConvertMediaToWebpCommand">
            <argument type="service" id="media.repository"/>
            <argument type="service" id="media_folder.repository"/>
            <argument type="service" id="shopware.filesystem.public"/>
            <argument type="service" id="shopware.filesystem.private"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ConfigService"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ImageFormatConverter"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\ImageResizer"/>
            <argument type="service" id="Artiss\MediaOptimizer\Service\OriginalMediaArchiver"/>
            <argument type="service" id="logger"/>
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>
    </services>
</container>
