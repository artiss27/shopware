# Shopware 6.7 Production Environment Configuration
# Copy this file to .env.prod and fill in actual values

# Application
APP_ENV=prod
APP_DEBUG=0
APP_URL=https://your-domain.com

# Docker Configuration
DOCKER_IMAGE=ghcr.io/your-username/shopware:latest
IMAGE_TAG=latest
GITHUB_REPOSITORY=your-username/shopware

# Database Configuration
DB_NAME=shopware
DB_USER=shopware
DB_PASSWORD=change-me-strong-password
DB_ROOT_PASSWORD=change-me-root-password
DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@database:3306/${DB_NAME}

# OpenSearch Configuration
OPENSEARCH_ENABLED=true
OPENSEARCH_INDEXING_ENABLED=true
OPENSEARCH_INDEX_PREFIX=sw6
OPENSEARCH_PASSWORD=change-me-opensearch-password
OPENSEARCH_URL=http://opensearch:9200

# Redis Configuration
REDIS_URL=redis://redis:6379

# Mail Configuration (Zoho)
MAILER_DSN=smtp://username:password@smtp.zoho.eu:587

# CDN Strategy
SHOPWARE_CDN_STRATEGY_DEFAULT=physical_filename

# Caddy Configuration (for Let's Encrypt)
CADDY_HOST=${APP_URL}
CADDY_EMAIL=your-email@example.com

# Backup Configuration (Hetzner Storage Box)
HETZNER_S3_ACCESS_KEY=your-s3-access-key
HETZNER_S3_SECRET_KEY=your-s3-secret-key
HETZNER_S3_ENDPOINT=https://your-account.your-storagebox.de
HETZNER_S3_BUCKET=shopware-backups
HETZNER_S3_REGION=fsn1

# Backup Retention (days)
BACKUP_RETENTION_DAYS=14

# Monitoring
MONITORING_ENABLED=true
MONITORING_EMAIL=admin@yourdomain.com

# Security
ALLOWED_HOSTS=${APP_URL}
